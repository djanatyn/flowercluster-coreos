[Unit]
Description=Registry
After=docker.service

[Service]
RestartSec=10s
Restart=on-failure
ExecStartPre=-/usr/bin/docker kill registry1
ExecStartPre=-/usr/bin/docker rm registry1
ExecStart=/usr/bin/docker run -p 5000:5000 -v registry-data:/var/lib/registry -v registry-certs:/certs -e REGISTRY_HTTP_TLS_CERTIFICATE=/certs/domain.crt -e REGISTRY_HTTP_TLS_KEY=/certs/domain.key --name registry1 registry:
ExecStop=/usr/bin/docker stop -t 2 registry1
